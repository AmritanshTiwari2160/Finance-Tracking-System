  <body>
    {{>header}}
    <main>
      <section class="hero">
        <h1>Manage Your Transactions and Expenses with FinTrackers</h1>
        <a href="/transactions" class="cta-btn">Get Started</a>
      </section>

      <section class="features">
        <div class="feature">
           <img src="images/transactional.png" alt="Chat Bot" />
